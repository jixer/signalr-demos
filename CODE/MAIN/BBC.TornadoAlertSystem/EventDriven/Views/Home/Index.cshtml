@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                SignalR Basic demo.  Enter alerts or watch the screen to see new alerts.
            </p>
        </div>
    </section>
}

<div>
    <h2>Enter an alert here:</h2>
    Alert Name:<br />
    <input id="name" type="text" /><br />
    <br />
    Alert Location:<br />
    <input id="location" type="text" /><br />
    
    <input id="submit-alert" type="button" value="Submit" />

    <h2>Monitor alerts here:</h2>
    <div id="tornado-warnings">

    </div>
</div>

@section scripts {
    <!--Reference the jQuery library. -->
    <script type="text/javascript" src="~/Scripts/jquery-1.8.2.js" ></script>

    <!--Reference the SignalR library. -->
    <script type="text/javascript" src="~/Scripts/jquery.signalR-2.0.0.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script type="text/javascript" src="~/signalr/hubs"></script>

    <!--Reference custom lib. -->
    <script type="text/javascript" src="~/Scripts/basic-alerts.js"></script>
}